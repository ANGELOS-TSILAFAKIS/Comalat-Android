<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="org.sakaiproject.sakai.EventInfoFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <RelativeLayout
                android:id="@+id/event_info_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Title"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Left side TextView -->

                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_title"
                    android:layout_marginTop="10dp"
                    android:text="Date" />

                <TextView
                    android:id="@+id/time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_date"
                    android:layout_marginTop="10dp"
                    android:text="Time" />

                <TextView
                    android:id="@+id/description_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_time"
                    android:layout_marginTop="10dp"
                    android:text="Description" />

                <TextView
                    android:id="@+id/attachments_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_txt"
                    android:layout_marginTop="10dp"
                    android:text="Attachments"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/frequency_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/attachments_linear"
                    android:layout_marginTop="10dp"
                    android:text="Frequency" />

                <TextView
                    android:id="@+id/type_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_frequency"
                    android:layout_marginTop="10dp"
                    android:text="Event Type" />

                <TextView
                    android:id="@+id/owner_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_type"
                    android:layout_marginTop="10dp"
                    android:text="Owner" />

                <TextView
                    android:id="@+id/site_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_owner"
                    android:layout_marginTop="10dp"
                    android:text="Site" />

                <TextView
                    android:id="@+id/event_location_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_site"
                    android:layout_marginTop="10dp"
                    android:text="Event Location"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/from_site_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_location"
                    android:layout_marginTop="10dp"
                    android:text="From Site" />

                <!-- Right side TextView -->

                <TextView
                    android:id="@+id/event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_title"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/date_txt" />

                <TextView
                    android:id="@+id/event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_date"
                    android:layout_marginLeft="77dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/time_txt" />


                <TextView
                    android:id="@+id/event_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_time"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/description_txt" />

                <LinearLayout
                    android:id="@+id/attachments_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_description"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">


                </LinearLayout>

                <TextView
                    android:id="@+id/event_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/attachments_linear"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/frequency_txt" />

                <TextView
                    android:id="@+id/event_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_frequency"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/type_txt" />

                <TextView
                    android:id="@+id/event_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_type"
                    android:layout_marginLeft="73dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/owner_txt" />

                <TextView
                    android:id="@+id/event_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_owner"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/site_txt" />

                <TextView
                    android:id="@+id/event_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_site"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/event_location_txt"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/event_from_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_location"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/from_site_txt" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_info_relative"
                android:layout_marginTop="5dp">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/edit_ripple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleColor="#f5f5f5"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">

                    <Button
                        android:id="@+id/edit_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#0083AF"
                        android:text="edit event"
                        android:textColor="#FFF"
                        android:padding="8dp"
                        android:visibility="gone" />

                </com.balysv.materialripple.MaterialRippleLayout>


                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/remove_ripple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/edit_ripple"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleColor="#f5f5f5"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">

                    <Button
                        android:id="@+id/remove_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#0083AF"
                        android:padding="8dp"
                        android:text="remove event"
                        android:textColor="#FFF"
                        android:visibility="gone" />

                </com.balysv.materialripple.MaterialRippleLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>
